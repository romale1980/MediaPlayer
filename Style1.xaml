    <Style x:Key="slider_progress" TargetType="Slider">
        <Setter Property="Margin" Value="5 0" />
        <Setter Property="Height" Value="16" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Slider}">
