                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border CornerRadius="8" Height="16" Width="16" BorderThickness="1" BorderBrush="#b8b9ba" Background="#FF8F4040" />
                </ControlTemplate>
            </Setter.Value>
