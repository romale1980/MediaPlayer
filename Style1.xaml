    <Style x:Key="pllistView1" TargetType="{x:Type ListView}" BasedOn="{StaticResource ResourceKey=pllistView}">
        <Setter Property="ItemContainerStyle" Value="{DynamicResource ResourceKey=pllistItem1}"/>
    </Style>
    
